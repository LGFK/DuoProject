<Page x:Class="DuoProjectLibrary.MVVM.View.AllBooksPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DuoProjectLibrary.MVVM.View"
      xmlns:AllBooksViewModel="clr-namespace:DuoProjectLibrary.MVVM.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AllBooksPage">
    <Page.DataContext>
        <AllBooksViewModel:AllBooksPageViewModel></AllBooksViewModel:AllBooksPageViewModel>
    </Page.DataContext>
    <Grid Margin="20">
        <Grid Margin="34">
            <ScrollViewer Style="{StaticResource ResourceKey=CustomScrollViewerStyle}">
                
                <ListBox Style="{StaticResource ResourceKey=LbAllBooksStyle}" ScrollViewer.VerticalScrollBarVisibility="Disabled">
                    
                </ListBox>
            </ScrollViewer>
            
        </Grid>
        <Border Panel.ZIndex="1" Margin="30" CornerRadius="10" BorderThickness="5" BorderBrush="#FF01D6F1"/>
    </Grid>
</Page>

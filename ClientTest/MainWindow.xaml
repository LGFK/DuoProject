<Window x:Class="ClientTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Image Name="Image1" Grid.Column="0" Grid.Row="0"/>
        <Image Name="Image2" Grid.Column="0" Grid.Row="1"/>
        <Image Name="Image3" Grid.Column="1" Grid.Row="0"/>
        <ListBox x:Name="ListBox" Grid.Row="1" Grid.Column="2"/>

        <Button Grid.Column="3" Grid.Row="3" Click="Button_Click">Get image</Button>
    </Grid>
</Window>
